{
    "GenVM Contract Template": {
        "prefix": "genvm-contract",
        "body": [
            "# { \"Depends\": \"py-genlayer:test\" }",
            "",
            "from genlayer import *",
            "",
            "class ${1:ContractName}(gl.Contract):",
            "    ${2:# Storage fields}",
            "    ${3:balance}: u256",
            "",
            "    def __init__(self, ${4:initial_value}: int):",
            "        ${5:self.balance = initial_value}",
            "",
            "    @gl.public.view",
            "    def ${6:get_balance}(self) -> int:",
            "        return ${7:self.balance}",
            "",
            "    @gl.public.write",
            "    def ${8:set_balance}(self, ${9:amount}: int):",
            "        ${10:self.balance = amount}",
            "$0"
        ],
        "description": "Create a basic GenVM contract template"
    },
