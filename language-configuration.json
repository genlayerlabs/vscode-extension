{
    "comments": {
        "lineComment": "#",
        "blockComment": [ "\"\"\"", "\"\"\"" ]
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "folding": {
        "markers": {
            "start": "^\\s*#\\s*region\\b",
            "end": "^\\s*#\\s*endregion\\b"
        }
    },
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\/\\?\\s]+)",
    "indentationRules": {
        "increaseIndentPattern": "^\\s*(?:def|class|for|if|elif|else|while|try|with|finally|except|async def).*?:\\s*$",
        "decreaseIndentPattern": "^\\s*(?:elif|else|except|finally)\\b.*?:\\s*$"
    }
}