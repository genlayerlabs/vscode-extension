{
  "name": "genlayer",
  "displayName": "GenLayer",
  "description": "Official VS Code extension for developing GenLayer intelligent contracts with Python",
  "version": "0.1.3",
  "publisher": "genlayer-labs",
  "icon": "images/icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/genlayerlabs/vscode-extension.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Other"
  ],
  "keywords": [
    "genvm",
    "genlayer",
    "blockchain",
    "intelligent contracts",
    "python",
    "linter"
  ],
  "activationEvents": [
    "onLanguage:python"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "snippets": [
      {
        "language": "python",
        "path": "./snippets/genvm-snippets.json"
      }
    ],
    "configuration": {
      "title": "GenLayer",
      "properties": {
        "genlayer.linting.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable GenLayer linting"
        },
        "genlayer.linting.severity": {
          "type": "string",
          "enum": [
            "error",
            "warning",
            "info"
          ],
          "default": "warning",
          "description": "Minimum severity level to show"
        },
        "genlayer.linting.showSuggestions": {
          "type": "boolean",
          "default": true,
          "description": "Show suggestions in diagnostics"
        },
        "genlayer.linting.excludeRules": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Rules to exclude from linting",
          "examples": [
            [
              "genvm-magic-comment"
            ],
            [
              "genvm-types",
              "genvm-decorators"
            ]
          ]
        },
        "genlayer.python.interpreterPath": {
          "type": "string",
          "default": "python3",
          "description": "Path to Python interpreter with genvm-linter installed"
        },
        "genlayer.autoInstallDependencies": {
          "type": "boolean",
          "default": true,
          "description": "Automatically prompt to install required Python packages (genvm-linter and mypy)"
        },
        "genlayer.autoGenerateStubs": {
          "type": "boolean",
          "default": true,
          "description": "Automatically generate type stubs for Pylance intellisense on activation"
        }
      }
    },
    "commands": [
      {
        "command": "genlayer.lintCurrentFile",
        "title": "Lint Current File",
        "category": "GenLayer"
      },
      {
        "command": "genlayer.lintWorkspace",
        "title": "Lint Workspace",
        "category": "GenLayer"
      },
      {
        "command": "genlayer.showOutputChannel",
        "title": "Show GenLayer Output",
        "category": "GenLayer"
      },
      {
        "command": "genlayer.debug",
        "title": "Debug Current File",
        "category": "GenLayer"
      },
      {
        "command": "genlayer.testLint",
        "title": "Test Linter",
        "category": "GenLayer"
      },
      {
        "command": "genlayer.installDependencies",
        "title": "Install Python Dependencies",
        "category": "GenLayer",
        "description": "Install required Python packages (genvm-linter and mypy)"
      },
      {
        "command": "genlayer.generateStubs",
        "title": "Generate Type Stubs",
        "category": "GenLayer",
        "description": "Generate GenLayer SDK type stubs for Pylance intellisense"
      },
      {
        "command": "genlayer.createContract",
        "title": "Create New Contract",
        "category": "GenLayer",
        "description": "Create a new GenLayer contract from template"
      },
      {
        "command": "genlayer.deployContract",
        "title": "Deploy Contract",
        "category": "GenLayer",
        "description": "Deploy the current GenLayer contract to a network"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "genlayer.lintCurrentFile",
          "when": "resourceExtname == .py",
          "group": "genvm@1"
        },
        {
          "command": "genlayer.deployContract",
          "when": "resourceExtname == .py",
          "group": "genvm@2"
        }
      ],
      "explorer/context": [
        {
          "command": "genlayer.lintCurrentFile",
          "when": "resourceExtname == .py",
          "group": "genvm@1"
        },
        {
          "command": "genlayer.createContract",
          "when": "explorerResourceIsFolder",
          "group": "genvm@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "child_process": "^1.0.2"
  }
}
